{
    "coc.source.iced.enable": true,
    "nextword.filetypes": ["markdown", "asciidoc", "gitcommit", "clojure", "vim", "help", "text"],
    // neovim ではこれがあると、意図せず候補が確定されなくていいかも？
    // まだ検証が不十分だけど
    //"suggest.keepCompleteopt": true,

    "deno.enable": true,
    "deno.lint": true,
    "deno.unstable": true,

    "diagnostic-languageserver.linters": {
        "clj_kondo_lint": {
            "command": "clj-kondo",
            "debounce": 100,
            "args": [ "--lint", "%filepath"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "clj-kondo",
            "formatLines": 1,
            "formatPattern": [
                "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
                {
                    "line": 1,
                    "column": 2,
                    "message": 4,
                    "security": 3
                }
            ],
            "securities": {
                    "error": "error",
                    "warning": "warning",
                    "note": "info"
            }

        }
    },
    "diagnostic-languageserver.filetypes": {
      "clojure": "clj_kondo_lint"
    },

    "codeLens.enable": true,
